{
  "manifest_version": 2,

  "name": "Rakete - German vocab buddy",
  "description": "Accelerate your German learning with dict.cc and linguee.com at your fingertips!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
   "contextMenus",
   "https://www.linguee.com/",
   "http://www.dict.cc/"
   ],

  "icons": {
    "16": "icon16.png"
    //"48": "icon48.png",
    //"128": "icon128.png" 
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://linguee.com/*", "http://dict.cc/*"],
      "js": ["jquery-3.2.1.min.js", "eventPage.js"]
    }
  ]
}